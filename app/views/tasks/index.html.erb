<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        ☑️
      <% else %>
        ☐
      <% end %>
      
      <%= link_to task.title, task_path(task) %>
      
      <%= link_to "Edit", edit_task_path(task) %>

      <%= link_to "Delete", 
                  task_path(task), 
                  data: { 
                    turbo_method: :delete, 
                    turbo_confirm: "Delete #{task.title}?" 
                  } %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path %>
